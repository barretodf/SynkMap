<div class="sidebar">
  <div class="section contact-section">
    <h2>Contato</h2>
    <div class="contact-btn">Enviar um contato</div>
    <div class="contact-option">
      <span>📧</span> Enviar mensagem pela plataforma
    </div>
    <div class="contact-option">
      <span>📞</span> Telefone visível após contato inicial
    </div>
    <span class="edit-icon">✏️</span>
  </div>
  <div class="section prices-section" data-controller="prices">
    <div class="prices-header">
      <h3>Preços</h3>
      <span class="edit-prices-icon" data-action="click->prices#toggleEdit">✏️</span>
    </div>
    <div class="prices-content" data-prices-target="display">
      <% @user.prices.each do |price| %>
        <div class="price-item">
          <span><%= price.description %></span>
          <span><%= number_to_currency(price.amount, unit: "R$", separator: ",", delimiter: ".") %></span>
        </div>
      <% end %>
      <div class="note">* Valores podem variar conforme necessidades específicas do evento</div>
    </div>
    <div class="prices-form" data-prices-target="editForm" style="display: none;">
      <%= form_with model: @user, url: profile_path(@user), method: :patch, local: true do |f| %>
        <div class="price-inputs" data-prices-target="inputs">
          <% @user.prices.each_with_index do |price, index| %>
            <div class="price-field" data-prices-target="field">
              <%= f.text_field "prices[#{index}_description]", value: price.description, class: "price-description-input", placeholder: "Descrição do evento" %>
              <%= f.text_field "prices[#{index}_amount]", value: price.amount, class: "price-input", placeholder: "Valor" %>
              <button type="button" class="remove-btn" data-action="click->prices#removeField">🗑️</button>
            </div>
          <% end %>
        </div>
        <button type="button" class="add-btn" data-action="click->prices#addField">Adicionar Evento</button>
        <div class="prices-actions">
          <%= f.submit "Salvar", class: "submit-btn" %>
          <button type="button" class="cancel-btn" data-action="click->prices#toggleEdit">Cancelar</button>
        </div>
      <% end %>
    </div>
  </div>
  <div class="section availability-section">
    <h3>Disponibilidade</h3>
    <div class="calendar-header">
      <span>Abril 2023</span>
      <div class="arrows">
        <span><</span>
        <span>></span>
      </div>
    </div>
    <div class="calendar">
      <div class="day-header">Do</div>
      <div class="day-header">Se</div>
      <div class="day-header">Te</div>
      <div class="day-header">Qu</div>
      <div class="day-header">Qu</div>
      <div class="day-header">Se</div>
      <div class="day-header">Sa</div>
      <% (20..30).each do |day| %>
        <div class="day unavailable"><%= day %></div>
      <% end %>
      <% (1..31).each do |day| %>
        <div class="day <%= day <= 3 ? 'unavailable' : 'available' %>"><%= day %></div>
      <% end %>
      <div class="day unavailable">1</div>
      <div class="day unavailable">2</div>
    </div>
    <div class="legend">
      <div class="item available">
        <div class="dot"></div>
        Disponível
      </div>
      <div class="item unavailable">
        <div class="dot"></div>
        Indisponível
      </div>
    </div>
    <span class="edit-icon">✏️</span>
  </div>
</div>